# ABI Website - Apache Security Configuration
# Version: 1.0.0

# Enable RewriteEngine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Force HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Block access to sensitive files
    RewriteRule ^\.git - [F,L]
    RewriteRule ^logs/ - [F,L]
    RewriteRule ^security-config\.md$ - [F,L]
    RewriteRule ^README.*\.md$ - [F,L]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # Prevent MIME sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Clickjacking protection
    Header always set X-Frame-Options "DENY"
    
    # XSS Protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Permissions Policy
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
    
    # Remove server information
    Header unset Server
    Header unset X-Powered-By
    
    # HSTS (HTTP Strict Transport Security) - 1 year
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Content Security Policy - Synced with index.html meta tag
    # Note: 'unsafe-inline' for styles needed for dynamic styles and honeypot field
    # connect-src allows API calls, websockets for dev tools, and localhost for development
    # font-src allows data: URIs for base64 encoded fonts
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' https://cdn.tailwindcss.com https://unpkg.com https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net; font-src 'self' data: https://fonts.gstatic.com; img-src 'self' data: https: blob:; connect-src 'self' https://api.yourbackend.com ws://127.0.0.1:* ws://localhost:* http://localhost:*; frame-src 'none'; object-src 'none'; base-uri 'self'; form-action 'self';"
</IfModule>

# Disable directory listing
<IfModule mod_autoindex.c>
    Options -Indexes
</IfModule>

# Protect sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "(^#.*#|\.(bak|conf|dist|fla|in[ci]|log|orig|psd|sh|sql|sw[op])|~)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to PHP files that should not be accessed directly
<FilesMatch "^(api|config|security).*\.php$">
    Order allow,deny
    Allow from all
    # Only allow POST requests to api.php
    <If "%{REQUEST_METHOD} !~ /^(POST|GET)$/">
        Require all denied
    </If>
</FilesMatch>

# Protect log files
<FilesMatch "\.(log|txt)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    ExpiresByType text/html "access plus 0 seconds"
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# Prevent access to backup files
<FilesMatch "(\.bak|\.backup|\.swp|\.old|~)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# PHP Security Settings
<IfModule mod_php7.c>
    php_flag display_errors Off
    php_flag display_startup_errors Off
    php_flag log_errors On
    php_flag expose_php Off
    php_value session.cookie_httponly 1
    php_value session.cookie_secure 1
    php_value session.cookie_samesite Strict
</IfModule>

# Limit file upload size (10MB)
<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
</IfModule>

# Block bad bots and scanners
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTP_USER_AGENT} (nikto|sqlmap|acunetix|nmap|havij|curl|wget|libwww) [NC]
    RewriteRule .* - [F,L]
</IfModule>

# Prevent hotlinking of images
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?yourdomain\.com [NC]
    RewriteRule \.(jpg|jpeg|png|gif|svg)$ - [F,L]
</IfModule>

# Custom Error Pages
ErrorDocument 400 /error-400.html
ErrorDocument 401 /error-401.html
ErrorDocument 403 /error-403.html
ErrorDocument 404 /error-404.html
ErrorDocument 500 /error-500.html
ErrorDocument 503 /error-503.html

# Limit request methods
<LimitExcept GET POST HEAD>
    Order deny,allow
    Deny from all
</LimitExcept>

# Protection against injection attacks
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Block SQL injection attempts
    RewriteCond %{QUERY_STRING} (union.*select|insert.*into|delete.*from|drop.*table) [NC]
    RewriteRule .* - [F,L]
    
    # Block XSS attempts
    RewriteCond %{QUERY_STRING} (<script|javascript:|onerror=|onclick=) [NC]
    RewriteRule .* - [F,L]
    
    # Block file injection
    RewriteCond %{QUERY_STRING} (\.\.\/|\.\.\\|etc\/passwd|boot\.ini) [NC]
    RewriteRule .* - [F,L]
</IfModule>

# Disable ETags (security risk)
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# UTF-8 encoding
AddDefaultCharset utf-8
AddCharset utf-8 .html .css .js .xml .json .rss .atom

# MIME types
<IfModule mod_mime.c>
    AddType application/javascript js
    AddType text/css css
    AddType image/svg+xml svg svgz
    AddType font/woff woff
    AddType font/woff2 woff2
</IfModule>

# Protect wp-config.php (if WordPress is used)
<Files wp-config.php>
    Order allow,deny
    Deny from all
</Files>

# Limit request size (10MB)
LimitRequestBody 10485760

# Set Server Time Zone
SetEnv TZ Asia/Jakarta

# Performance: Enable Keep-Alive
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>

